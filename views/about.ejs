<style>
    /* CSS spécifique pour la page À propos */
    
    .about-container {
        background-color: #fdf2f8;
        min-height: 80vh;
    }

    .hero-about {
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, #fdf2f8 0%, #fce7f3 100%);
    }

    .hero-about h1 {
        color: #2d3748;
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 1rem;
    }

    .hero-about p {
        color: #718096;
        font-size: 1.25rem;
        max-width: 600px;
        margin: 0 auto 2rem;
        line-height: 1.6;
    }

    .content-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 4rem 2rem;
    }

    .mission-section {
        background: white;
        padding: 3rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 3rem;
        text-align: center;
    }

    .mission-section h2 {
        color: #2d3748;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

    .mission-icon {
        width: 2.5rem;
        height: 2.5rem;
        color: #dc3545;
    }

    .mission-text {
        color: #4a5568;
        font-size: 1.1rem;
        line-height: 1.8;
        max-width: 800px;
        margin: 0 auto;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .value-card {
        background: white;
        padding: 2.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: all 0.3s ease;
        border-top: 4px solid #dc3545;
    }

    .value-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .value-icon {
        width: 3rem;
        height: 3rem;
        color: #dc3545;
        margin: 0 auto 1.5rem;
    }

    .value-title {
        color: #2d3748;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .value-description {
        color: #718096;
        line-height: 1.6;
    }

    .stats-section {
        background: #dc3545;
        padding: 4rem 2rem;
        border-radius: 1rem;
        color: white;
        text-align: center;
        margin-bottom: 4rem;
    }

    .stats-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 3rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        display: block;
    }

    .stat-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .team-section {
        background: white;
        padding: 3rem;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
        margin-bottom: 3rem;
    }

    .team-section h2 {
        color: #2d3748;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
    }

    .team-description {
        color: #718096;
        font-size: 1.1rem;
        line-height: 1.8;
        max-width: 600px;
        margin: 0 auto 2rem;
    }

    .contact-cta {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 0.75rem 2rem;
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .contact-cta:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        color: white;
        text-decoration: none;
    }

    .join-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 3rem;
        border-radius: 1rem;
        text-align: center;
        border: 2px solid #e2e8f0;
    }

    .join-section h2 {
        color: #2d3748;
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .join-section p {
        color: #718096;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .join-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary-large {
        background: #dc3545;
        color: white;
        padding: 0.875rem 2rem;
        border: none;
        border-radius: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-primary-large:hover {
        background: #c82333;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        color: white;
        text-decoration: none;
    }

    .btn-secondary-large {
        background: white;
        color: #2d3748;
        padding: 0.875rem 2rem;
        border: 2px solid #e2e8f0;
        border-radius: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-secondary-large:hover {
        background: #f7fafc;
        border-color: #cbd5e0;
        color: #2d3748;
        text-decoration: none;
    }

    /* Animations */
    .mission-section {
        animation: fadeInUp 0.6s ease-out;
    }

    .value-card {
        animation: fadeInUp 0.6s ease-out;
    }

    .value-card:nth-child(2) {
        animation-delay: 0.1s;
    }

    .value-card:nth-child(3) {
        animation-delay: 0.2s;
    }

    .stats-section {
        animation: fadeInUp 0.6s ease-out 0.3s;
        animation-fill-mode: both;
    }

    .team-section {
        animation: fadeInUp 0.6s ease-out 0.4s;
        animation-fill-mode: both;
    }

    .join-section {
        animation: fadeInUp 0.6s ease-out 0.5s;
        animation-fill-mode: both;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero-about {
            padding: 3rem 1rem;
        }

        .hero-about h1 {
            font-size: 2.5rem;
        }

        .content-section {
            padding: 2rem 1rem;
        }

        .mission-section,
        .team-section {
            padding: 2rem;
        }

        .mission-section h2 {
            flex-direction: column;
            gap: 0.5rem;
        }

        .values-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .value-card {
            padding: 2rem;
        }

        .stats-section {
            padding: 3rem 1rem;
        }

        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }

        .join-buttons {
            flex-direction: column;
            align-items: center;
        }

        .btn-primary-large,
        .btn-secondary-large {
            width: 100%;
            max-width: 300px;
        }
    }

    @media (max-width: 480px) {
        .hero-about h1 {
            font-size: 2rem;
        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .stat-number {
            font-size: 2.5rem;
        }
    }
</style>

