<% if (notification) { %>
  <div style="background-color: lightgreen; padding: 10px; margin-bottom: 15px;">
    <%= notification %>
  </div>
<% } %>


<h2>Gérer les Campagnes</h2>

<% if (campaigns.length > 0) { %>
  <table border="1" cellpadding="10" cellspacing="0">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Description</th>
        <th>Dates</th>
        <th>Heures</th>
        <th>Lieu</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% campaigns.forEach(campaign => { %>
        <tr>
          <td><%= campaign.title %></td>
          <td><%= campaign.description %></td>
          <td>du <%= campaign.startDate.toLocaleDateString() %> au <%= campaign.endDate.toLocaleDateString() %></td>
          <td><%= campaign.startTime %> - <%= campaign.endTime %></td>
          <td><%= campaign.location %></td>
          <td>
            <a href="/admin/campaigns/<%= campaign._id %>/edit">
              <button style="background-color: orange; color: white;">Modifier 🖊️</button>
            </a>

            <form action="/admin/campaigns/<%= campaign._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette campagne ?')">Supprimer 🗑️</button>
            </form>            
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <p>Aucune campagne trouvée.</p>
<% } %>
