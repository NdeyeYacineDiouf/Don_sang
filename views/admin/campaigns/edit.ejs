<%- include('../../adminLayout') %>

<div class="admin-form-container">
  <h1>Modifier la Campagne</h1>
  
  <form action="/admin/campaigns/<%= campaign._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Titre</label>
      <input type="text" id="title" name="title" value="<%= campaign.title %>" required>
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" required><%= campaign.description %></textarea>
    </div>

    <div class="form-row">
      <div class="form-group">
        <label for="startDate">Date de début</label>
        <input type="date" id="startDate" name="startDate" 
               value="<%= campaign.startDate.toISOString().split('T')[0] %>" required>
      </div>

      <div class="form-group">
        <label for="endDate">Date de fin</label>
        <input type="date" id="endDate" name="endDate" 
               value="<%= campaign.endDate.toISOString().split('T')[0] %>" required>
      </div>
    </div>

    <div class="form-group">
      <label for="status">Statut</label>
      <select id="status" name="status" required>
        <option value="draft" <%= campaign.status === 'draft' ? 'selected' : '' %>>Brouillon</option>
        <option value="active" <%= campaign.status === 'active' ? 'selected' : '' %>>Active</option>
        <option value="completed" <%= campaign.status === 'completed' ? 'selected' : '' %>>Terminée</option>
        <option value="cancelled" <%= campaign.status === 'cancelled' ? 'selected' : '' %>>Annulée</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
  </form>
</div>