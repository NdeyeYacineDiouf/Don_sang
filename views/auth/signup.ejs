<style>
  /* CSS spécifique pour la page d'inscription */
  
  .auth-container {
      min-height: 70vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      background-color: #fdf2f8;
  }

  .auth-form {
      background: white;
      padding: 3rem;
      border-radius: 1rem;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 450px;
  }

  .auth-header {
      text-align: center;
      margin-bottom: 2rem;
  }

  .auth-header h1 {
      color: #2d3748;
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
  }

  .auth-header p {
      color: #718096;
      font-size: 1rem;
  }

  .form-section {
      margin-bottom: 2rem;
  }

  .form-section h3 {
      color: #2d3748;
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
  }

  .form-section small {
      color: #718096;
      font-size: 0.875rem;
      display: block;
      margin-bottom: 1.5rem;
  }

  .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      margin-bottom: 1rem;
  }

  .form-group {
      margin-bottom: 1.5rem;
  }

  .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      color: #2d3748;
      font-weight: 500;
      font-size: 0.875rem;
  }

  .required {
      color: #dc3545;
  }

  .form-control {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 2px solid #e2e8f0;
      border-radius: 0.5rem;
      font-size: 1rem;
      transition: all 0.3s ease;
      background-color: #f7fafc;
  }

  .form-control:focus {
      outline: none;
      border-color: #dc3545;
      background-color: white;
      box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.1);
  }

  .btn-auth {
      width: 100%;
      padding: 0.875rem;
      background: #dc3545;
      color: white;
      border: none;
      border-radius: 0.5rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 1rem;
  }

  .btn-auth:hover {
      background: #c82333;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
  }

  .auth-footer {
      text-align: center;
      margin-top: 2rem;
      padding-top: 1.5rem;
      border-top: 1px solid #e2e8f0;
  }

  .auth-footer p {
      color: #718096;
      margin-bottom: 1rem;
  }

  .auth-footer a {
      color: #dc3545;
      text-decoration: none;
      font-weight: 500;
  }

  .auth-footer a:hover {
      text-decoration: underline;
  }

  .back-link {
      color: #718096;
      text-decoration: none;
      font-size: 0.875rem;
  }

  .back-link:hover {
      color: #dc3545;
  }

  /* Animation d'entrée */
  .auth-form {
      animation: slideUp 0.6s ease-out;
  }

  @keyframes slideUp {
      from {
          opacity: 0;
          transform: translateY(30px);
      }
      to {
          opacity: 1;
          transform: translateY(0);
      }
  }

  /* Responsive */
  @media (max-width: 768px) {
      .form-row {
          grid-template-columns: 1fr;
      }
  }

  @media (max-width: 480px) {
      .auth-container {
          padding: 1rem;
      }

      .auth-form {
          padding: 2rem;
      }

      .auth-header h1 {
          font-size: 1.75rem;
      }
  }

  /* Message de notification */
  .notification {
      padding: 1rem;
      margin-bottom: 1.5rem;
      border-radius: 0.5rem;
      border-left: 4px solid;
  }

  .notification.success {
      background: #d4edda;
      border-color: #28a745;
      color: #155724;
  }

  .notification.error {
      background: #f8d7da;
      border-color: #dc3545;
      color: #721c24;
  }

  /* Validation du mot de passe */
  .password-match {
      border-color: #28a745 !important;
  }

  .password-mismatch {
      border-color: #dc3545 !important;
  }

  .password-help {
      font-size: 0.75rem;
      margin-top: 0.25rem;
      color: #718096;
  }

  .password-help.error {
      color: #dc3545;
  }

  .password-help.success {
      color: #28a745;
  }
</style>

<div class="auth-container">
  <form class="auth-form" action="/signup" method="POST" id="signupForm">
      <div class="auth-header">
          <h1>Créer un compte</h1>
          <p>Rejoignez notre communauté de donneurs et sauvez des vies</p>
      </div>

      <% if (typeof notification !== 'undefined' && notification) { %>
          <div class="notification success">
              <%= notification %>
          </div>
      <% } %>

      <div class="form-section">
          <h3>Informations personnelles</h3>
          <small>Remplissez le formulaire ci-dessous pour créer votre compte donneur</small>
          
          <div class="form-group">
              <label for="email">Adresse email <span class="required">*</span></label>
              <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  class="form-control" 
                  placeholder="votre@email.com" 
                  required 
                  autocomplete="email"
              >
          </div>

          <div class="form-row">
              <div class="form-group">
                  <label for="password">Mot de passe <span class="required">*</span></label>
                  <input 
                      type="password" 
                      id="password" 
                      name="password" 
                      class="form-control" 
                      placeholder="••••••••" 
                      required 
                      autocomplete="new-password"
                      minlength="6"
                  >
                  <div class="password-help" id="passwordHelp">
                      Minimum 6 caractères
                  </div>
              </div>
              <div class="form-group">
                  <label for="confirmPassword">Confirmer le mot de passe <span class="required">*</span></label>
                  <input 
                      type="password" 
                      id="confirmPassword" 
                      name="confirmPassword" 
                      class="form-control" 
                      placeholder="••••••••" 
                      required 
                      autocomplete="new-password"
                  >
                  <div class="password-help" id="confirmHelp">
                      Répétez votre mot de passe
                  </div>
              </div>
          </div>

          <button type="submit" class="btn-auth">
              Créer mon compte
          </button>
      </div>

      <div class="auth-footer">
          <p>
              Déjà inscrit ? 
              <a href="/login">Se connecter</a>
          </p>
          <p>
              <a href="/" class="back-link">← Retour à l'accueil</a>
          </p>
      </div>
  </form>
</div>

<script>
// Validation côté client du formulaire d'inscription
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('signupForm');
  const password = document.getElementById('password');
  const confirmPassword = document.getElementById('confirmPassword');
  const passwordHelp = document.getElementById('passwordHelp');
  const confirmHelp = document.getElementById('confirmHelp');

  function validatePasswords() {
      const pwd = password.value;
      const confirmPwd = confirmPassword.value;

      // Validation du mot de passe principal
      if (pwd.length < 6) {
          password.classList.remove('password-match');
          password.classList.add('password-mismatch');
          passwordHelp.textContent = 'Le mot de passe doit contenir au moins 6 caractères';
          passwordHelp.classList.add('error');
          passwordHelp.classList.remove('success');
      } else {
          password.classList.remove('password-mismatch');
          password.classList.add('password-match');
          passwordHelp.textContent = 'Mot de passe valide';
          passwordHelp.classList.add('success');
          passwordHelp.classList.remove('error');
      }

      // Validation de la confirmation
      if (confirmPwd.length > 0) {
          if (pwd === confirmPwd && pwd.length >= 6) {
              confirmPassword.classList.remove('password-mismatch');
              confirmPassword.classList.add('password-match');
              confirmHelp.textContent = 'Les mots de passe correspondent';
              confirmHelp.classList.add('success');
              confirmHelp.classList.remove('error');
          } else {
              confirmPassword.classList.remove('password-match');
              confirmPassword.classList.add('password-mismatch');
              confirmHelp.textContent = 'Les mots de passe ne correspondent pas';
              confirmHelp.classList.add('error');
              confirmHelp.classList.remove('success');
          }
      } else {
          confirmPassword.classList.remove('password-match', 'password-mismatch');
          confirmHelp.textContent = 'Répétez votre mot de passe';
          confirmHelp.classList.remove('success', 'error');
      }
  }

  password.addEventListener('input', validatePasswords);
  confirmPassword.addEventListener('input', validatePasswords);

  // Validation finale à la soumission
  form.addEventListener('submit', function(e) {
      const pwd = password.value;
      const confirmPwd = confirmPassword.value;

      if (pwd !== confirmPwd) {
          e.preventDefault();
          alert('Les mots de passe ne correspondent pas.');
          confirmPassword.focus();
          return false;
      }

      if (pwd.length < 6) {
          e.preventDefault();
          alert('Le mot de passe doit contenir au moins 6 caractères.');
          password.focus();
          return false;
      }
  });
});
</script>