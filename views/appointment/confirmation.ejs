<%- include('../layout') %>

<div class="appointment-confirmation">
  <div class="confirmation-card">
    <h1>Rendez-vous confirmé !</h1>
    <i class="fas fa-check-circle"></i>
    
    <div class="appointment-details">
      <p><strong>Campagne :</strong> <%= appointment.campaign.title %></p>
      <p><strong>Date :</strong> <%= appointment.slot.date.toLocaleDateString() %></p>
      <p><strong>Heure :</strong> <%= appointment.slot.startTime %> - <%= appointment.slot.endTime %></p>
      <p><strong>Lieu :</strong> <%= appointment.campaign.bloodBank.location.address %></p>
    </div>

    <p>Un email de confirmation vous a été envoyé.</p>
    
    <div class="actions">
      <a href="/appointments" class="btn btn-primary">Voir mes rendez-vous</a>
      <a href="/campaigns" class="btn">Trouver d'autres campagnes</a>
    </div>
  </div>
</div>