<% layout('layout') %>

<div class="campaigns-list">
  <h1>Campagnes de Don de Sang</h1>
  
  <% if (campaigns.length > 0) { %>
    <div class="campaigns-grid">
      <% campaigns.forEach(campaign => { %>
        <div class="campaign-card">
          <div class="campaign-header">
            <h3><%= campaign.title %></h3>
            <span class="date-badge">
              <%= campaign.startDate.toLocaleDateString() %> - <%= campaign.endDate.toLocaleDateString() %>
            </span>
          </div>
          
          <div class="campaign-body">
            <p><%= campaign.description.substring(0, 100) %>...</p>
            <p><i class="fas fa-map-marker-alt"></i> <%= campaign.bloodBank.location.address %></p>
          </div>

          <div class="campaign-footer">
            <a href="/campaigns/<%= campaign._id %>" class="btn btn-primary">Voir d√©tails</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="empty-state">
      <i class="fas fa-heartbeat"></i>
      <p>Aucune campagne disponible pour le moment</p>
    </div>
  <% } %>
</div>